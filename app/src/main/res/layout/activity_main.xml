<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- FrameLayout (화면 높이의 40% 차지) -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4">

        <WebView
            android:id="@+id/webView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#00000000"/>


        <!-- 이미지 뷰 -->
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#00000000"
            android:scaleType="fitXY"/>
        <!--            android:src="@drawable/ic_launcher_foreground"-->

        <!-- 기본 View로 CustomView 대체 -->
        <com.example.conesp32.CustomView
            android:id="@+id/customView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#00000000" />


    </FrameLayout>

    <!-- 입력 창과 버튼을 포함하는 LinearLayout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:orientation="vertical">

        <!-- 위에 공간을 차지하는 빈 블록 (View) -->
        <View
            android:layout_width="match_parent"
            android:layout_height="32dp" />

        <!-- 고정된 텍스트를 표시 -->
        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="IP 주소를 입력하세요"
            android:hint="192.168.5.1"/>

        <!-- 입력 창 (숫자와 특수문자 입력 가능) -->
        <EditText
            android:id="@+id/inputField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number|textVisiblePassword"
            android:text="192.168.5.1"
            android:hint="Enter numbers or special characters" />

        <!-- 위에 공간을 차지하는 빈 블록 (View) -->
        <View
            android:layout_width="match_parent"
            android:layout_height="18dp" />
        <!-- 두 개의 버튼 그룹 (연결/종료, 출발/정지) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="16dp">

            <!-- 첫 번째 버튼 그룹 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <Button
                    android:id="@+id/button1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="연결"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"/>


                <Button
                    android:id="@+id/button2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="종료"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="18dp" />

            <!-- 두 번째 버튼 그룹 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="16dp">

                <Button
                    android:id="@+id/button3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="출발"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp" />

                <Button
                    android:id="@+id/button4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="정지"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"/>
            </LinearLayout>

        </LinearLayout>

        <!-- 위에 공간을 차지하는 빈 블록 (View) -->
        <View
            android:layout_width="match_parent"
            android:layout_height="32dp" />
        <!-- 완전 종료 버튼 추가 -->
        <Button
            android:id="@+id/button5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="완전 종료"
            android:layout_marginTop="16dp"/>

    </LinearLayout>

</LinearLayout>
